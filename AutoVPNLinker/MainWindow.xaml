<Window x:Class="AutoVPNLinker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoVPNLinker"
        mc:Ignorable="d"
        Title="Auto VPN Linker" Height="350" Width="525">
    <Grid>
        <Label Content="VPN Name: " HorizontalAlignment="Left" Margin="84,76,0,0" VerticalAlignment="Top"/>
        <TextBox Name="vpnName" HorizontalAlignment="Left" Height="23" Margin="169,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="259"/>
        <Label Content="Email Address: " HorizontalAlignment="Left" Margin="66,120,0,0" VerticalAlignment="Top"/>
        <TextBox Name="emailAddress" HorizontalAlignment="Left" Height="23" Margin="169,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="259"/>
        <Label Content="Email Password: " HorizontalAlignment="Left" Margin="66,164,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="emailPassword" HorizontalAlignment="Left" Height="23" Margin="169,167,0,0" VerticalAlignment="Top" Width="259" PasswordChar="*" />
        <Button Content="Start" HorizontalAlignment="Left" Margin="169,215,0,0" VerticalAlignment="Top" Width="75" Click="StartMonitorAndLink" />



    </Grid>
</Window>
